<%= form_for([:backend, @group], html:{ class: 'form-horizontal' } )  do |f|%>
<div class="form-group">
    <%= f.label :group_name, '品牌', class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :group_name, class: 'form-control', placeholder: '请输入品牌' %>
    </div>
</div>
<div class="form-group">
    <%= f.label :status, '状态', class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :status, class: 'form-control', placeholder: '请选择状态' %>
    </div>
</div>
<div class="form-group">
    <%= f.label :memo, '备注', class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :memo, class: 'form-control', placeholder: '请输入备注' %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-5 col-sm-10">      
      <%= f.button '提交' , class: 'btn btn-default' %>
      <%= link_to '返回', backend_groups_path, class: 'btn btn-default' %>
    </div>
</div>
<% end %>
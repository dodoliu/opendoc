<%= link_to '+新增品牌', new_backend_group_path, class: 'btn btn-default' %>

<div class="box noBg">
  <div class="tabbox">  
    <%= render 'backend/shared/advanced_query', :locals => { :path =>backend_groups_path } %>
    <table class="table">
      <thead>
        <tr>
          <th>品牌名称</th>
          <th>状态</th>
          <th>备注</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |t| %>
          <tr>
            <td><%= t.group_name %></td>
            <td><%= t.status %></td>
            <td><%= t.memo %></td>
            <td>
              <%= link_to '编辑', edit_backend_group_path(t), class: 'btn btn-default btn-xs' %>
              <%= link_to '删除', backend_group_path(t.id), method: :delete, data: { confirm: '确定删除吗?' }, class: 'btn btn-default btn-xs'  %>
            </td>            
          </tr>          
        <% end %>        
      </tbody>
    </table>
  </div>
</div>
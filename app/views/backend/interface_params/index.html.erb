<%= render 'backend/shared/site_map' %>
<%= link_to '+新增接口参数', new_backend_interface_interface_param_path + append_param(params[:group_id]), class: 'btn btn-default advanced_top' %>
<%= render 'backend/shared/advanced_query', :locals => { :path =>backend_interface_interface_params_path } %>

<div class="table_style">
<table class="table">
  <thead>
    <tr>
      <th>参数名称</th>
      <th>参数类型</th>
      <th>是否必须参数</th>
      <th>参数描述</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @interface_params.each do |t| %>
      <tr>
        <td><%= t.param_name %></td>
        <td><%= t.param_type %></td>
        <td><%= find_must_enum(t.param_must) %></td>
        <td><%= t.param_desc %></td>
        <td>
          <%= link_to '编辑', edit_backend_interface_interface_param_path(params[:interface_id],t) + append_param(params[:group_id]), class: 'edit'  %>
          <%= link_to '删除', backend_interface_interface_param_path(params[:interface_id],t.id) + append_param(params[:group_id]), method: :delete, data: { confirm: '确定删除吗?' }, class: 'edit'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<nav aria-label="Page navigation" class="pagination_style">
<%= paginate @interface_params %>
</div>
<%= render 'backend/shared/site_map' %>
<%= link_to '+新增调用者', new_backend_member_path, class: 'btn btn-default advanced_top' %>
<%= render 'backend/shared/advanced_query', :locals => { :path =>backend_members_path } %>

<div class="table_style">
<table class="table">
  <thead>
    <tr>
      <th>调用者名称</th>
      <th>接口过期时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |t| %>
      <tr>
        <td><%= t.display_name %></td>
        <td><%= t.expire_date %></td>
        <td>
          <%= link_to '编辑', edit_backend_member_path(t), class: 'edit'  %>
          <%= link_to '删除', backend_member_path(t.id), method: :delete, data: { confirm: '确定删除吗?' }, class: 'edit'  %>
          <%= link_to '添加品牌', 'javascript:void(0)', class: 'edit', 'data-id': t.id, 'v-on:click': 'add_groups' %>
          <%= link_to '公共访问地址', 'javascript:void(0)', class: 'edit', 'data-sid': t.sid, 'v-on:click': 'open_api' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= hidden_field_tag 'member_id' %>
</div>

<nav aria-label="Page navigation" class="pagination_style">
<%= paginate @members %>
</div>
<%= render 'backend/shared/groups' %>

<script type='text/javascript' src="<%= asset_path 'member.js' %>"></script>

<%= render 'backend/shared/site_map' %>
<%= link_to '+新增角色', new_backend_role_path, class: 'btn btn-default advanced_top' %>
<%= render 'backend/shared/advanced_query', :locals => { :path =>backend_roles_path } %>

<div class="table_style">
<table class="table">
  <thead>
    <tr>
      <th>角色名称</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td>
          <%= link_to '编辑', edit_backend_role_path(t), class: 'edit'  %>
          <%= link_to '禁用', backend_role_path(t.id), method: :delete, data: { confirm: '确定禁用吗?' }, class: 'edit'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<nav aria-label="Page navigation" class="pagination_style">
<%= paginate @roles %>
</div>
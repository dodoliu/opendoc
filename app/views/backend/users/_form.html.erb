<%= render 'backend/shared/site_map' %>
<%= form_for([:backend, @user], html:{ class: 'form-horizontal edit_style' })  do |f|%>

<%= render 'backend/shared/error', :locals => { :obj => @user } %>
<div class="form-group">
    <%= f.label :display_name, '显示名', class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :display_name, class: 'form-control', placeholder: '请输入显示名' %>
    </div>
</div>
<div class="form-group">
    <%= f.label :email, '用户名', class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-control', placeholder: '请输入用户名' %>
    </div>
</div>
<div class="form-group">
    <%= f.label :password, '密码', class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :password, class: 'form-control', placeholder: '请输入密码' %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10 edit_button_style">
      <%= f.button '提交' , class: 'btn btn-default' %>
      <%= link_to '返回', backend_users_path, class: 'btn btn-default' %>
    </div>
</div>
<% end %>
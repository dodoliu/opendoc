<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">

      <%= devise_error_messages! %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>\
      <span class="heading">找回密码</span>
      <div class="form-group sign_in_top">      
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "还没有账号,去注册?", new_registration_path(resource_name) %>
        <% end %>
        &nbsp;&nbsp;
        <%- if controller_name != 'sessions' %>
          <%= link_to "已有账号,去登陆?", new_session_path(resource_name) %><br />
        <% end -%>
      </div>
      <div class="form-group" style="position: static;">
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: '电子邮箱' %>
      </div>

      <div class="form-group">
        <%= f.submit "发送邮件", class: 'btn btn-default' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

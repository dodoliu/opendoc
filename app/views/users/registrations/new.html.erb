<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <%= devise_error_messages! %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
          <span class="heading">注册</span>
          <div class="form-group sign_in_top">      
            <%- if controller_name != 'sessions' %>
              <%= link_to "已有账号,去登陆?", new_session_path(resource_name) %><br />
            <% end -%>
          </div>
          <div class="form-group" style="position: static">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: '用户名或电子邮箱' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: '密码(最少6个字符)' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: '确认密码' %>
          </div>
          <div class="form-group">
            <%= f.submit "注册", class: 'btn btn-default' %>
          </div>
          <%= f.hidden_field :status, value: 'active' %>
        <% end %>
        </div>
    </div>
</div>
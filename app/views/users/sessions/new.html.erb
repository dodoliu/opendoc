<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <span class="heading">登录</span>
      <div class="form-group sign_in_top">      
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "还没有账号,去注册?", new_registration_path(resource_name) %>
        <% end %>
        &nbsp;&nbsp;
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "忘记密码?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
      <div class="form-group" style="position: static">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: '用户名或电子邮箱' %>
      </div>
      <div class="form-group help">
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: '密码' %>
      </div>
      <div class="form-group">
      <% if devise_mapping.rememberable? -%>
        <div class="main-checkbox">
          <%= f.check_box :remember_me %>
          <label for="user_remember_me">记住我</label>
        </div>
      <% end %>
      <%= f.submit '登陆', class: 'btn btn-default' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
